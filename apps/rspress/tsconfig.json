{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@com/*": ["./src/components/*"],
      "@page/*": ["./src/page/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["docs", "theme", "src", "rspress.config.ts", "src/components/test.tsx"],
  "mdx": {
    "checkMdx": true
  }
}
