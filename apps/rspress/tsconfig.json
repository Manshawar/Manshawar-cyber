{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@com/*": ["./src/components/*"],
      "@page/*": ["./src/page/*"],
      "@/*": ["./src/*"],
      "*": ["./types/*"]
    },
    "types": [],
    "typeRoots": ["./types", "./node_modules/@types", ],
    "baseUrl": ".",
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["src/**/*", "types/**/*.d.ts", "theme/**/*", "docs/**/*.mdx", "docs/**/*.tsx", "./node_modules/vue-comp/dist/types"],
  "mdx": {
    "checkMdx": true
  }
}
